import { Component, html } from "@exalt/core";
import { define, options } from "@exalt/core/decorators";
import styles from "./say-hello.css";

@define("say-hello")
@options({ shadow: true, styles: [styles] })
export class SayHello extends Component {

    render({ name }) {
        return html`
            <h1>Hello ${name}!</h1>
        `;
    }
}