{
  "name": "@exalt/core",
  "version": "0.3.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Exalt - The framework runtime",
  "main": "dist/core.cjs.js",
  "module": "dist/core.esm.js",
  "types": "types/core.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "exalt",
    "html",
    "frontend",
    "web-components",
    "components",
    "template-literals",
    "templates"
  ],
  "files": [
    "dist",
    "types"
  ],
  "exports": {
    ".": {
      "require": "./dist/core.cjs.js",
      "import": "./dist/core.esm.js",
      "default": "./dist/core.esm.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/exalt/exalt.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/exalt/exalt/issues"
  },
  "homepage": "https://github.com/exalt/exalt#readme",
  "author": "Outwalk Studios <support@outwalkstudios.com> (https://www.outwalkstudios.com/)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.14",
    "esbuild": "^0.11.20",
    "eslint": "^7.26.0",
    "rollup": "^2.47.0",
    "rollup-plugin-esbuild": "^4.2.3"
  }
}